@model ControleDeEstoque.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}


<h6 class="text-center">Você tem certeza que deseja EXCLUIR este produto?</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
    </dl>
</div>
<hr />
<div>
    <form asp-action="ExcluirProduto" class="text-right">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="text-dark text-decoration-none">Voltar</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
