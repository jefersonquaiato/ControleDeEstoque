@model ControleDeEstoque.Models.Produto

@{
    ViewData["Title"] = "Ajustar Estoque";
}

<h3 class="text-center">Ajustar Estoque</h3>

<hr />
<section class="row">
    <div class="col-md-4">
        <form asp-action="AjustarEstoque">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Nome" />
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" disabled />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" required />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Ajuste" class="btn btn-secondary" />
            </div>
            <a asp-action="Index" class="text-dark text-decoration-none">Voltar</a>
        </form>
    </div>
</section>